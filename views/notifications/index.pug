extends ../layout/layout

block content
  .max-w-4xl.mx-auto.py-6

    //- Page Header
    .bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-6.mb-6.dark_bg-neutral-800.dark_border-neutral-700
      .flex.items-center.justify-between.mb-4
        h1.text-3xl.font-bold.text-gray-900.dark_text-white Notifications

        //- Action Buttons
        .flex.gap-2
          if filter === 'unread' && totalCount > 0
            form(method="PATCH" action="/api/notifications/read-all" style="display: inline;")
              button.px-4.py-2.text-sm.font-medium.text-blue-600.dark_text-blue-400.hover_text-blue-700.dark_hover_text-blue-300.transition-colors(
                type="submit"
              )
                svg.w-4.h-4.inline.mr-2(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7")
                | Mark All as Read

          a.px-4.py-2.text-sm.font-medium.text-gray-700.dark_text-neutral-300.bg-gray-100.dark_bg-neutral-700.hover_bg-gray-200.dark_hover_bg-neutral-600.rounded-lg.transition-colors(
            href="/notifications/preferences" title="Configure notification settings"
          )
            svg.w-4.h-4.inline.mr-2(fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
            | Settings

      //- Filter Tabs
      .flex.gap-2.border-b.border-gray-200.dark_border-neutral-700.-mb-6
        a(
          href="/notifications?filter=all"
          class=filter === 'all' ? 'border-b-2 border-blue-600 text-blue-600 dark:text-blue-400 px-4 py-2 font-medium' : 'text-gray-600 dark:text-neutral-400 px-4 py-2 hover:text-gray-900 dark:hover:text-white'
        )
          | All (#{totalCount})

        a(
          href="/notifications?filter=unread"
          class=filter === 'unread' ? 'border-b-2 border-blue-600 text-blue-600 dark:text-blue-400 px-4 py-2 font-medium' : 'text-gray-600 dark:text-neutral-400 px-4 py-2 hover:text-gray-900 dark:hover:text-white'
        )
          | Unread

        a(
          href="/notifications?filter=ticket_assigned"
          class=filter === 'ticket_assigned' ? 'border-b-2 border-blue-600 text-blue-600 dark:text-blue-400 px-4 py-2 font-medium text-sm' : 'text-gray-600 dark:text-neutral-400 px-4 py-2 text-sm hover:text-gray-900 dark:hover:text-white'
        )
          | Tickets Assigned

        a(
          href="/notifications?filter=new_message"
          class=filter === 'new_message' ? 'border-b-2 border-blue-600 text-blue-600 dark:text-blue-400 px-4 py-2 font-medium text-sm' : 'text-gray-600 dark:text-neutral-400 px-4 py-2 text-sm hover:text-gray-900 dark:hover:text-white'
        )
          | New Messages

        a(
          href="/notifications?filter=chat_message"
          class=filter === 'chat_message' ? 'border-b-2 border-blue-600 text-blue-600 dark:text-blue-400 px-4 py-2 font-medium text-sm' : 'text-gray-600 dark:text-neutral-400 px-4 py-2 text-sm hover:text-gray-900 dark:hover:text-white'
        )
          | Chat

    //- Notifications List
    if notifications && notifications.length > 0
      .space-y-3

        each notification in notifications
          a.block.bg-white.rounded-lg.shadow-sm.border.border-gray-200.hover_shadow-md.hover_border-blue-200.transition-all.dark_bg-neutral-800.dark_border-neutral-700.dark_hover_border-blue-500(
            href=notification.action_url || '#'
          )
            .px-6.py-4

              //- Notification Header
              .flex.items-start.justify-between.mb-2
                .flex.items-center.gap-3.flex-1
                  //- Icon based on type
                  .flex-shrink-0
                    case notification.type
                      when 'ticket_assigned'
                        .p-2.bg-blue-100.dark_bg-blue-900/30.rounded-lg
                          svg.w-5.h-5.text-blue-600.dark_text-blue-400(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4")
                      when 'new_message'
                        .p-2.bg-green-100.dark_bg-green-900/30.rounded-lg
                          svg.w-5.h-5.text-green-600.dark_text-green-400(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z")
                      when 'mention'
                        .p-2.bg-purple-100.dark_bg-purple-900/30.rounded-lg
                          svg.w-5.h-5.text-purple-600.dark_text-purple-400(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h-2m0 0H10m2 0l1.5-1.5M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2z")
                      when 'chat_message'
                        .p-2.bg-indigo-100.dark_bg-indigo-900/30.rounded-lg
                          svg.w-5.h-5.text-indigo-600.dark_text-indigo-400(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-2H5a2 2 0 01-2-2V8a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2l-4 2v-2.5z")
                      when 'escalation'
                        .p-2.bg-red-100.dark_bg-red-900/30.rounded-lg
                          svg.w-5.h-5.text-red-600.dark_text-red-400(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0-10l7.07 7.07M5.93 5.93L12 12")
                      when 'ticket_status_change'
                        .p-2.bg-yellow-100.dark_bg-yellow-900/30.rounded-lg
                          svg.w-5.h-5.text-yellow-600.dark_text-yellow-400(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
                      else
                        .p-2.bg-gray-100.dark_bg-gray-700.rounded-lg
                          svg.w-5.h-5.text-gray-600.dark_text-gray-400(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")

                  div.flex-1
                    .flex.items-center.gap-2
                      h3.text-sm.font-semibold.text-gray-900.dark_text-white= notification.title
                      if !notification.is_read
                        .h-2.w-2.bg-blue-500.rounded-full

                    p.text-sm.text-gray-600.dark_text-neutral-400.mt-1.line-clamp-2= notification.message

                //- Delete button
                button.text-gray-400.dark_text-neutral-500.hover_text-gray-600.dark_hover_text-neutral-400.transition-colors(
                  type="button"
                  onclick="deleteNotification(event, #{notification.id})"
                  title="Delete notification"
                )
                  svg.w-4.h-4(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")

              //- Time
              .flex.items-center.justify-between
                p.text-xs.text-gray-500.dark_text-neutral-500= timeAgo(notification.created_at)

    else
      //- Empty State
      .bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-12.text-center.dark_bg-neutral-800.dark_border-neutral-700
        svg.mx-auto.h-12.w-12.text-gray-400.dark_text-neutral-500.mb-4(fill="none" stroke="currentColor" viewBox="0 0 24 24")
          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9")

        p.text-gray-600.dark_text-neutral-400.font-medium No notifications yet

        if filter === 'unread'
          p.text-gray-500.dark_text-neutral-500.text-sm.mt-1 You're all caught up! No unread notifications.
        else
          p.text-gray-500.dark_text-neutral-500.text-sm.mt-1 You'll see your notifications here when something happens.

    //- Pagination
    if totalPages > 1
      .mt-6.flex.items-center.justify-center.gap-2
        if hasPrevPage
          a.px-4.py-2.text-sm.font-medium.text-gray-700.dark_text-neutral-300.bg-white.dark_bg-neutral-800.border.border-gray-300.dark_border-neutral-600.rounded-lg.hover_bg-gray-50.dark_hover_bg-neutral-700.transition-colors(
            href=`/notifications?page=${currentPage - 1}&filter=${filter}`
          )
            | ← Previous

        .flex.items-center.gap-1
          each i in Array.from({ length: totalPages }, (_, i) => i + 1)
            if i === currentPage
              button.px-3.py-2.text-sm.font-medium.text-white.bg-blue-600.rounded-lg(disabled)
                = i
            else
              a.px-3.py-2.text-sm.font-medium.text-gray-700.dark_text-neutral-300.hover_text-gray-900.dark_hover_text-white(
                href=`/notifications?page=${i}&filter=${filter}`
              )
                = i

        if hasNextPage
          a.px-4.py-2.text-sm.font-medium.text-gray-700.dark_text-neutral-300.bg-white.dark_bg-neutral-800.border.border-gray-300.dark_border-neutral-600.rounded-lg.hover_bg-gray-50.dark_hover_bg-neutral-700.transition-colors(
            href=`/notifications?page=${currentPage + 1}&filter=${filter}`
          )
            | Next →

script.
  // Delete notification
  async function deleteNotification(e, notificationId) {
    e.stopPropagation();
    if (!confirm('Delete this notification?')) return;

    try {
      const response = await fetch(`/api/notifications/${notificationId}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        location.reload();
      } else {
        alert('Error deleting notification');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error deleting notification');
    }
  }
