//- Flash Messages
.fixed.top-4.right-4.z-50.space-y-2
  if success && success.length > 0
    each msg in success
      .flash-message.bg-green-500.text-white.px-6.py-3.rounded-lg.shadow-lg.flex.items-center.justify-between.max-w-md
        .flex.items-center.space-x-2
          svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
          span= msg
        button.ml-4(onclick="closeFlashMessage(this)")
          svg.w-4.h-4(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")

  if error && error.length > 0
    each msg in error
      .flash-message.bg-red-500.text-white.px-6.py-3.rounded-lg.shadow-lg.flex.items-center.justify-between.max-w-md
        .flex.items-center.space-x-2
          svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z")
          span= msg
        button.ml-4(onclick="closeFlashMessage(this)")
          svg.w-4.h-4(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")

  if info && info.length > 0
    each msg in info
      .flash-message.bg-blue-500.text-white.px-6.py-3.rounded-lg.shadow-lg.flex.items-center.justify-between.max-w-md
        .flex.items-center.space-x-2
          svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
          span= msg
        button.ml-4(onclick="closeFlashMessage(this)")
          svg.w-4.h-4(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")

  if warning && warning.length > 0
    each msg in warning
      .flash-message.bg-yellow-500.text-white.px-6.py-3.rounded-lg.shadow-lg.flex.items-center.justify-between.max-w-md
        .flex.items-center.space-x-2
          svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z")
          span= msg
        button.ml-4(onclick="closeFlashMessage(this)")
          svg.w-4.h-4(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")
