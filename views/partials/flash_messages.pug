//- Flash Messages Component
if successMessage && successMessage.length > 0
  each msg in successMessage
    .bg-green-50.border-l-4.border-green-500.p-4.mb-4.rounded-r-lg.shadow-sm(role="alert")
      .flex.items-center
        i.lucide.lucide-check-circle.text-green-500.mr-3(data-lucide="check-circle")
        .flex-1
          p.text-green-800.font-medium= msg
        button.text-green-500.hover_text-green-700(onclick="this.parentElement.parentElement.remove()")
          i.lucide.lucide-x(data-lucide="x")

