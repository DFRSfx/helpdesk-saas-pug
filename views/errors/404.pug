extends ../layout/layout

block content
  .min-h-screen.flex.items-center.justify-center.bg-gradient-to-br.from-slate-50.to-slate-100.px-4
    .text-center
      .mb-8
        svg.mx-auto.h-32.w-32.text-indigo-600(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
          path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z')
      
      h1.text-9xl.font-bold.text-slate-800.mb-4 404
      h2.text-3xl.font-semibold.text-slate-700.mb-4 Page Not Found
      p.text-lg.text-slate-600.mb-8.max-w-md.mx-auto
        | The page you're looking for doesn't exist or has been moved.
      
      .flex.gap-4.justify-center
        a.px-6.py-3.bg-indigo-600.text-white.rounded-lg.hover_bg-indigo-700.transition-colors.font-medium(href='/dashboard')
          | Go to Dashboard
        a.px-6.py-3.bg-white.text-slate-700.rounded-lg.hover_bg-slate-50.border.border-slate-300.transition-colors.font-medium(href='javascript:history.back()')
          | Go Back
