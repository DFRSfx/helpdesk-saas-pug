extends ../layout/layout

block content
  .min-h-screen.flex.items-center.justify-center.px-4.py-12
    .max-w-2xl.w-full
      .bg-white.rounded-2xl.shadow-xl.p-8.md_p-12.text-center
        //- Error Icon
        .mb-6
          if statusCode === 404
            svg.mx-auto.h-24.w-24.text-indigo-600(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
              path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z')
          else if statusCode === 403
            svg.mx-auto.h-24.w-24.text-red-600(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
              path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z')
          else if statusCode === 500
            svg.mx-auto.h-24.w-24.text-orange-600(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
              path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z')
          else
            svg.mx-auto.h-24.w-24.text-gray-600(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
              path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z')
        
        //- Error Code
        .mb-4
          h1.text-6xl.md_text-8xl.font-bold.text-gray-800= statusCode || 500
        
        //- Error Title
        h2.text-2xl.md_text-3xl.font-bold.text-gray-900.mb-4= title || 'Oops! Something went wrong'
        
        //- Error Message
        p.text-gray-600.text-lg.mb-8= message || 'An unexpected error occurred. Please try again later.'
        
        //- Error Details (Development only)
        if error && error.stack && (process.env.NODE_ENV === 'development')
          .bg-gray-100.rounded-lg.p-4.mb-6.text-left
            h3.text-sm.font-semibold.text-gray-700.mb-2 Error Details (Development Mode):
            pre.text-xs.text-gray-600.overflow-x-auto.whitespace-pre-wrap= error.stack
        
        //- Action Buttons
        .flex.flex-col.sm_flex-row.gap-4.justify-center
          if statusCode === 404
            a.inline-flex.items-center.justify-center.px-6.py-3.bg-gradient-to-r.from-indigo-600.to-purple-600.text-white.font-semibold.rounded-lg.hover_from-indigo-700.hover_to-purple-700.transition-all.shadow-lg.hover_shadow-xl(href='/')
              svg.w-5.h-5.mr-2(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6')
              | Go Home
          else
            a.inline-flex.items-center.justify-center.px-6.py-3.bg-gradient-to-r.from-indigo-600.to-purple-600.text-white.font-semibold.rounded-lg.hover_from-indigo-700.hover_to-purple-700.transition-all.shadow-lg.hover_shadow-xl(href='javascript:history.back()')
              svg.w-5.h-5.mr-2(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10 19l-7-7m0 0l7-7m-7 7h18')
              | Go Back
          
          a.inline-flex.items-center.justify-center.px-6.py-3.border.border-gray-300.text-gray-700.font-semibold.rounded-lg.hover_bg-gray-50.transition-colors(href='/')
            svg.w-5.h-5.mr-2(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
              path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6')
            | Dashboard
        
        //- Help Text
        .mt-8.text-sm.text-gray-500
          p Need help? 
            a.text-indigo-600.hover_text-indigo-700.font-medium(href='/support') Contact Support
            |  or check our 
            a.text-indigo-600.hover_text-indigo-700.font-medium(href='/help') Help Center
