extends ../layout/layout

block content
  .min-h-screen.flex.items-center.justify-center.bg-gray-50.py-12.px-4.sm_px-6.lg_px-8
    .text-center
      h1.text-6xl.font-bold.text-gray-900= status
      p.text-2xl.font-semibold.text-gray-700.mt-4= message
      if error && error.stack
        .mt-6.bg-gray-100.p-4.rounded-lg.text-left.max-w-2xl.mx-auto
          pre.text-xs.text-gray-700.whitespace-pre-wrap= error.stack
      .mt-6
        a.inline-flex.items-center.px-4.py-2.border.border-transparent.text-base.font-medium.rounded-md.text-white.bg-blue-600.hover_bg-blue-700(href="/dashboard")
          | Go to Dashboard
