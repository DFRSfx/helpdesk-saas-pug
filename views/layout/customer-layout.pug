doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="description" content="Zolentra - Professional SaaS Helpdesk Platform for Modern Customer Support")
    meta(name="author" content="Zolentra")
    title= title || 'Zolentra'
    //- Favicon support for all browsers
    link(rel="icon" type="image/x-icon" href="/favicon.ico")
    link(rel="icon" type="image/png" sizes="32x32" href="/favicon.ico")
    link(rel="icon" type="image/png" sizes="16x16" href="/favicon.ico")
    link(rel="apple-touch-icon" href="/favicon.ico")
    meta(name="theme-color" content="#2563eb")
    link(rel="stylesheet" href="/css/output.css")
    link(rel="stylesheet" href="/css/chat.css")
    script(src="/socket.io/socket.io.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js")
    script(src="https://cdn.jsdelivr.net/npm/marked@11.1.0/marked.min.js")
    script(src="https://cdn.jsdelivr.net/npm/preline/dist/preline.js")
  body.bg-gradient-to-br.from-gray-50.to-gray-100.min-h-screen
    .min-h-screen.flex.flex-col
      //- Navbar
      include ../partials/navbar

      //- Flash messages
      include ../partials/flash_messages

      //- Page content
      main.flex-1.overflow-y-auto
        block content

    //- Main JavaScript
    script(src="/js/main.js")
    script(src="/js/chat.js")

    //- Make currentUser available to JavaScript
    script.
      window.currentUser = !{JSON.stringify(currentUser || null)};

    //- Session keeper for keeping user logged in during activity
    script(src="/js/sessionKeeper.js")

    block scripts
