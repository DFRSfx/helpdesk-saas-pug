extends ../layout/layout

block content
  .max-w-7xl.mx-auto.py-6

    //- Ticket selection modal
    .fixed.inset-0.bg-gray-500.bg-opacity-75.transition-opacity.z-40#ticketsModal(class=selectedTicketId ? 'hidden' : '')
      .fixed.inset-0.z-40.overflow-y-auto
        .flex.items-end.justify-center.min-h-screen.pt-4.px-4.pb-20.text-center.sm_block.sm_p-0
          .hidden.sm_inline-block.sm_align-middle.sm_h-screen(aria-hidden="true") &#8203;
          .inline-block.align-bottom.bg-white.dark_bg-neutral-800.rounded-lg.text-left.overflow-hidden.shadow-xl.transform.transition-all.sm_my-8.sm_align-middle.sm_w-full.sm_max-w-lg.border.border-gray-200.dark_border-neutral-700
            .bg-white.dark_bg-neutral-800.px-4.py-5.sm_p-6
              .sm_flex.sm_items-start
                .mt-3.text-center.sm_mt-0.sm_ml-4.sm_text-left.w-full
                  h3.text-lg.leading-6.font-medium.text-gray-900.dark_text-white.mb-4
                    | Select a Ticket

                  .mt-4
                    if tickets.length > 0
                      .space-y-2.max-h-96.overflow-y-auto
                        each ticket in tickets
                          .p-4.border.border-gray-200.dark_border-neutral-600.rounded-lg.cursor-pointer.hover_bg-gray-50.dark_hover_bg-neutral-700.transition-colors.ticket-selection-btn(data-ticket-id=ticket.id)
                            .flex.items-start.justify-between
                              div
                                h4.font-semibold.text-gray-900.dark_text-white= ticket.title
                                p.text-sm.text-gray-600.dark_text-neutral-400.mt-1= ticket.description ? ticket.description.substring(0, 100) + '...' : 'No description'
                                .flex.items-center.gap-4.mt-2.text-xs.text-gray-500.dark_text-neutral-400
                                  span
                                    strong Status:
                                    = ' ' + ticket.status
                                  span
                                    strong Priority:
                                    = ' ' + ticket.priority
                                  span
                                    strong Created:
                                    = ' ' + timeAgo(ticket.created_at)
                              .flex-shrink-0
                                svg.w-5.h-5.text-gray-400(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
                    else
                      .text-center.py-8
                        svg.mx-auto.h-12.w-12.text-gray-400.dark_text-neutral-500.mb-4(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7 12a5 5 0 1110 0 5 5 0 01-10 0z")
                        p.text-gray-600.dark_text-neutral-400.font-medium No tickets found
                        p.text-gray-500.dark_text-neutral-500.text-sm.mt-1 Create a new ticket to get started

    //- Ticket chat view
    div#ticketChatView(class=selectedTicketId ? '' : 'hidden')
      .bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-6.mb-6.dark_bg-neutral-800.dark_border-neutral-700
        .flex.items-center.justify-between
          h2.text-2xl.font-bold.text-gray-900.dark_text-white Ticket Chat
          button.text-gray-500.dark_text-neutral-400.hover_text-gray-700.dark_hover_text-neutral-200.transition#closeTicketBtn(title="Back to ticket list")
            svg.w-6.h-6(fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")

      .grid.grid-cols-1.md_grid-cols-3.gap-6
        //- Main chat area
        .md_col-span-2.space-y-6
          .bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-6.dark_bg-neutral-800.dark_border-neutral-700
            h3.text-lg.font-semibold.text-gray-900.dark_text-white.mb-4 Conversation

            #messagesContainer.space-y-4.mb-4.max-h-96.overflow-y-auto
              //- Messages will be loaded here via JavaScript

            //- Message form
            form#messageForm.mt-6.pt-6.border-t.border-gray-200.dark_border-neutral-700(enctype="multipart/form-data" novalidate)
              .space-y-4
                .flex.items-center.gap-2.mb-2
                  label.block.text-sm.font-medium.text-gray-700.dark_text-neutral-300(for="message") Add Response
                  span.text-xs.text-red-600.dark_text-red-400.font-semibold * Required
                textarea.w-full.px-4.py-2.border.border-gray-300.rounded-lg.bg-white.text-gray-900.placeholder-gray-500.focus_outline-none.focus_ring-2.focus_ring-offset-2.focus_ring-blue-500.transition-all.duration-200.dark_bg-neutral-700.dark_border-neutral-600.dark_text-white.dark_placeholder-neutral-400.dark_focus_ring-blue-400#message(name="message" rows="4" required placeholder="Type your message here... (Supports Markdown)" aria-label="Message content" aria-required="true")
                p.text-xs.text-gray-500.dark_text-neutral-400.mt-1 Supports Markdown formatting

                .flex.items-center.gap-2.p-3.bg-blue-50.dark_bg-blue-900.rounded-lg.border.border-blue-200.dark_border-blue-700
                  input.w-4.h-4.border.border-gray-300.rounded.text-blue-600.focus_ring-2.focus_ring-offset-2.focus_ring-blue-500.cursor-pointer.dark_bg-neutral-700.dark_border-neutral-600.dark_accent-blue-600#isInternal(type="checkbox" name="is_internal" value="true" aria-label="Mark as internal note")
                  label.text-sm.text-gray-700.dark_text-neutral-300.cursor-pointer(for="isInternal")
                    span.font-semibold Internal Note
                    = " â€” Only visible to agents and admins"

                .flex.items-center.justify-end.gap-2.pt-2
                  button.inline-flex.items-center.px-6.py-2.bg-blue-600.text-white.rounded-lg.shadow-sm.hover_bg-blue-700.hover_shadow-md.focus_outline-none.focus_ring-2.focus_ring-offset-2.focus_ring-blue-500.active_bg-blue-800.transition-all.duration-200.dark_focus_ring-blue-400.dark_focus_ring-offset-neutral-900.disabled_opacity-50.disabled_cursor-not-allowed(type="submit" title="Send your message (Ctrl+Enter)")
                    svg.w-5.h-5.mr-2(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                      path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2m0 0v-8m0 8l-6-4m6 4l6-4")
                    | Send Message

        //- Ticket info sidebar
        .md_col-span-1.space-y-6
          .bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-6.dark_bg-neutral-800.dark_border-neutral-700
            h3.text-lg.font-semibold.text-gray-900.dark_text-white.mb-4 Ticket Info
            .space-y-4#ticketInfoContainer
              //- Ticket info will be loaded here via JavaScript

  script.
    // HTML escape function
    function escapeHtml(text) {
      const map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
      };
      return text.replace(/[&<>"']/g, m => map[m]);
    }

    // Get selected ticket ID from query params or data attribute
    const selectedTicketId = new URLSearchParams(window.location.search).get('ticketId') || #{selectedTicketId || 'null'};

    // Handle ticket selection from modal
    document.querySelectorAll('.ticket-selection-btn').forEach(btn => {
      btn.addEventListener('click', async function() {
        const ticketId = this.getAttribute('data-ticket-id');
        // Redirect with ticketId in URL
        window.location.href = `/tickets/portal?ticketId=${ticketId}`;
      });
    });

    // If ticket is selected, load its details and messages
    if (selectedTicketId) {
      document.getElementById('ticketsModal').classList.add('hidden');
      document.getElementById('ticketChatView').classList.remove('hidden');

      // Load ticket details
      async function loadTicketDetails() {
        try {
          const response = await fetch(`/api/tickets/${selectedTicketId}`);
          const data = await response.json();

          if (data.success) {
            const ticket = data.ticket;
            const infoHtml = `
              <div>
                <div class="text-xs font-semibold text-gray-600 dark:text-neutral-400 uppercase tracking-wide">Priority</div>
                <span class="inline-block px-3 py-1 text-sm font-semibold rounded-full mt-2">${ticket.priority}</span>
              </div>
              <div>
                <div class="text-xs font-semibold text-gray-600 dark:text-neutral-400 uppercase tracking-wide">Status</div>
                <div class="font-medium text-gray-900 dark:text-white mt-2">${ticket.status}</div>
              </div>
              <div>
                <div class="text-xs font-semibold text-gray-600 dark:text-neutral-400 uppercase tracking-wide">Created</div>
                <div class="font-medium text-gray-900 dark:text-white mt-2">${new Date(ticket.created_at).toLocaleDateString()}</div>
              </div>
            `;
            document.getElementById('ticketInfoContainer').innerHTML = infoHtml;
          }
        } catch (error) {
          console.error('Error loading ticket details:', error);
        }
      }

      // Load ticket messages
      async function loadMessages() {
        try {
          const response = await fetch(`/api/tickets/${selectedTicketId}/messages`);
          const data = await response.json();

          if (data.success && data.messages) {
            const messagesContainer = document.getElementById('messagesContainer');

            if (data.messages.length === 0) {
              messagesContainer.innerHTML = `
                <div class="text-center py-8">
                  <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-neutral-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                  <p class="text-gray-600 dark:text-neutral-400 font-medium">No messages yet</p>
                </div>
              `;
            } else {
              const messagesHtml = data.messages.map(msg => `
                <div class="flex items-start space-x-4 p-3 rounded border-l-4 ${msg.is_internal ? 'border-yellow-500 bg-yellow-50 dark:bg-yellow-900' : 'border-blue-500 bg-blue-50 dark:bg-blue-900'}">
                  <div class="flex-1">
                    <div class="flex items-center justify-between">
                      <p class="text-sm font-medium text-gray-900 dark:text-white">${msg.user_name}</p>
                      ${msg.is_internal ? '<span class="px-2 py-1 text-xs font-semibold bg-yellow-200 dark:bg-yellow-700 text-yellow-800 dark:text-yellow-200 rounded">Internal</span>' : ''}
                    </div>
                    <p class="text-xs text-gray-500 dark:text-neutral-400 mt-1">${new Date(msg.created_at).toLocaleString()}</p>
                    <div class="text-gray-700 dark:text-neutral-300 mt-2 whitespace-pre-wrap">${escapeHtml(msg.message)}</div>
                  </div>
                </div>
              `).join('');

              messagesContainer.innerHTML = messagesHtml;
            }
          }
        } catch (error) {
          console.error('Error loading messages:', error);
        }
      }

      // Handle form submission
      document.getElementById('messageForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const message = document.getElementById('message').value;
        const isInternal = document.getElementById('isInternal').checked;

        if (!message.trim()) {
          alert('Message cannot be empty');
          return;
        }

        try {
          const response = await fetch(`/tickets/${selectedTicketId}/message`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ message, is_internal: isInternal })
          });

          if (response.ok) {
            document.getElementById('message').value = '';
            document.getElementById('isInternal').checked = false;
            // Reload messages
            await loadMessages();
          } else {
            alert('Error sending message');
          }
        } catch (error) {
          console.error('Error sending message:', error);
          alert('Error sending message');
        }
      });

      // Close ticket view
      document.getElementById('closeTicketBtn').addEventListener('click', () => {
        window.location.href = '/tickets/portal';
      });

      // Load data on page load
      loadTicketDetails();
      loadMessages();
    }
