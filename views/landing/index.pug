      const loginToggleBtn = document.getElementById('login-toggle-password');
      const loginPasswordInput = document.getElementById('login-password');

      if (loginToggleBtn && loginPasswordInput) {
        loginToggleBtn.addEventListener('click', function() {
          const eyeSlash = loginToggleBtn.querySelector('.eye-slash');
          const eyeOpen = loginToggleBtn.querySelector('.eye-open');

          if (loginPasswordInput.type === 'password') {
            loginPasswordInput.type = 'text';
            eyeSlash.classList.add('hidden');
            eyeOpen.classList.remove('hidden');
          } else {
            loginPasswordInput.type = 'password';
            eyeSlash.classList.remove('hidden');
            eyeOpen.classList.add('hidden');
          }
        });
      }

      // Create a custom FormValidator for auth forms
      class AuthFormValidator {
        constructor(formSelector, errorContainerSelector) {
          this.form = document.querySelector(formSelector);
          this.errorContainers = document.querySelectorAll(errorContainerSelector);
          if (this.form) {
            this.findFields();
          }
        }

        findFields() {
          this.fields = {};
          const inputs = this.form.querySelectorAll('[data-validate]');
          inputs.forEach(field => {
            const rules = field.getAttribute('data-validate');
            this.fields[field.id] = {
              element: field,
              rules: this.parseRules(rules)
            };
          });
        }

        parseRules(rulesString) {
          return rulesString.split('|').map(rule => {
            const [ruleName, param] = rule.split(':');
            return { rule: ruleName.trim(), param: param?.trim() };
          });
        }

        validateField(fieldId) {
          const field = this.fields[fieldId];
          if (!field) return true;

          const element = field.element;
          const value = element.value;
          const rules = field.rules;

          for (const { rule, param } of rules) {
            const ruleConfig = FormValidator.rules[rule];
            if (!ruleConfig) continue;

            const isValid = ruleConfig.validate(value, param);
            if (!isValid) {
              this.showError(fieldId, typeof ruleConfig.message === 'function' ? ruleConfig.message(param) : ruleConfig.message);
              return false;
            }
          }

          this.clearError(fieldId);
          return true;
        }

        validateForm() {
          let isValid = true;
          Object.keys(this.fields).forEach(fieldId => {
            if (!this.validateField(fieldId)) {
              isValid = false;
            }
          });
          return isValid;
        }

        showError(fieldId, message) {
          const field = this.fields[fieldId];
          if (!field) return;

          const element = field.element;
          element.classList.add('error');
          element.classList.remove('valid');

          const errorContainer = element.parentElement.querySelector('.error-message-login, .error-message-register');
          if (errorContainer) {
            errorContainer.textContent = message;
            errorContainer.classList.remove('hidden');
          }
        }

        clearError(fieldId) {
          const field = this.fields[fieldId];
          if (!field) return;

          const element = field.element;
          element.classList.remove('error');
          element.classList.add('valid');

          const errorContainer = element.parentElement.querySelector('.error-message-login, .error-message-register');
          if (errorContainer) {
            errorContainer.textContent = '';
            errorContainer.classList.add('hidden');
          }
        }
      }

      // Initialize auth form validators
      const loginValidator = new AuthFormValidator('#loginForm', '.error-message-login');
      const registerValidator = new AuthFormValidator('#registerForm', '.error-message-register');

      // Login form AJAX submission
      const loginForm = document.getElementById('loginForm');
      if (loginForm) {
        loginForm.addEventListener('submit', async function(e) {
          e.preventDefault();

          // Validate first
          if (!loginValidator.validateForm()) {
            return;
          }

          // Hide previous errors
          const errorDiv = document.getElementById('login-error');
          errorDiv.classList.add('hidden');

          // Get form data
          const formData = {
            email: document.getElementById('login-email').value,
            password: document.getElementById('login-password').value,
            remember: document.getElementById('login-remember').checked
          };

          // Show loading state
          const submitBtn = document.getElementById('login-submit');
          const submitText = document.getElementById('login-submit-text');
          const submitSpinner = document.getElementById('login-submit-spinner');
          submitBtn.disabled = true;
          submitText.classList.add('hidden');
          submitSpinner.classList.remove('hidden');

          try {
            const response = await fetch('/auth/login', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formData)
            });

            const data = await response.json();

            if (response.ok) {
              // Success - redirect to dashboard
              window.location.href = data.redirect || '/dashboard';
            } else {
              // Show error
              const errorMessage = document.getElementById('login-error-message');
              errorMessage.textContent = data.error || 'Invalid email or password';
              errorDiv.classList.remove('hidden');

              // Reset loading state
              submitBtn.disabled = false;
              submitText.classList.remove('hidden');
              submitSpinner.classList.add('hidden');
            }
          } catch (error) {
            // Network error
            const errorMessage = document.getElementById('login-error-message');
            errorMessage.textContent = 'Network error. Please try again.';
            errorDiv.classList.remove('hidden');

            // Reset loading state
            submitBtn.disabled = false;
            submitText.classList.remove('hidden');
            submitSpinner.classList.add('hidden');
          }
        });
      }

