extends ../layout/layout

block content
  .max-w-7xl.mx-auto.px-4.py-6
    //- 1. COMPACT HEADER (Title Left, Button Right)
    .flex.items-center.justify-between.mb-6
      div
        h1.text-2xl.font-bold.text-gray-900 Departments
        p.text-sm.text-gray-500.mt-1 Overview of support teams and metrics

      if isAdmin()
        a.inline-flex.items-center.px-4.py-2.bg-blue-600.text-white.text-sm.font-medium.rounded-lg.shadow-sm.hover_bg-blue-700.transition-colors(href="/departments/create")
          svg.w-4.h-4.mr-2(fill="none" stroke="currentColor" viewBox="0 0 24 24")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4")
          | New Department

    if departments && departments.length > 0
      //- 2. MAIN DATA TABLE (The most compact way to view this data)
      .bg-white.rounded-lg.shadow-sm.border.border-gray-200.overflow-hidden
        .overflow-x-auto
          table.min-w-full.divide-y.divide-gray-200
            thead.bg-gray-50
              tr
                th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Department
                th.px-6.py-3.text-center.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Status
                th.px-6.py-3.text-right.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Agents
                th.px-6.py-3.text-right.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Workload
                th.px-6.py-3.text-right.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Performance
                if isAdmin()
                  th.px-6.py-3.text-right.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Actions

            tbody.bg-white.divide-y.divide-gray-200
              each dept in departments
                tr.group.hover_bg-gray-50.transition-colors
                  //- Department Info
                  td.px-6.py-4.whitespace-nowrap
                    .flex.items-center
                      .flex-shrink-0.h-10.w-10.rounded-lg.bg-blue-100.text-blue-600.flex.items-center.justify-center.font-bold
                        = dept.name.charAt(0).toUpperCase()
                      .ml-4
                        .text-sm.font-medium.text-gray-900= dept.name
                        if dept.description
                          .text-xs.text-gray-500.truncate(class="max-w-[150px]" title=dept.description)= dept.description

                  //- Status Badge
                  td.px-6.py-4.whitespace-nowrap.text-center
                    if dept.is_active
                      //- FIX: Moved px-2.5 and py-0.5 into class attribute
                      span.inline-flex.items-center.rounded-full.text-xs.font-medium.bg-green-100.text-green-800(class="px-2.5 py-0.5")
                        //- FIX: Moved w-1.5, h-1.5, and mr-1.5 into class attribute
                        span.bg-green-600.rounded-full(class="w-1.5 h-1.5 mr-1.5")
                        | Active
                    else
                      //- FIX: Moved px-2.5 and py-0.5 into class attribute
                      span.inline-flex.items-center.rounded-full.text-xs.font-medium.bg-gray-100.text-gray-800(class="px-2.5 py-0.5")
                        | Inactive

                  //- Agent Count
                  td.px-6.py-4.whitespace-nowrap.text-right.text-sm.text-gray-600
                    .flex.items-center.justify-end.gap-1
                      svg.w-4.h-4.text-gray-400(fill="none" stroke="currentColor" viewBox="0 0 24 24"): path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z")
                      span= dept.agent_count || 0

                  //- Workload (Open / Total)
                  td.px-6.py-4.whitespace-nowrap.text-right
                    div.text-sm.text-gray-900
                      span.font-bold.text-blue-600= dept.open_tickets || 0
                      span.text-gray-400.mx-1 /
                      span= dept.total_tickets || 0
                    div.text-xs.text-gray-500 Open Tickets

                  //- Performance (Resolution Rate)
                  td.px-6.py-4.whitespace-nowrap.text-right
                    - const resolvedRate = dept.total_tickets > 0 ? ((dept.resolved_tickets || 0) / dept.total_tickets * 100).toFixed(0) : 0
                    .flex.items-center.justify-end
                      span.text-sm.font-medium.mr-2 #{resolvedRate}%
                      .w-16.bg-gray-100.rounded-full(class="h-1.5")
                        .bg-green-500.rounded-full(class="h-1.5" style=`width: ${resolvedRate}%`)

                  //- Actions
                  if isAdmin()
                    td.px-6.py-4.whitespace-nowrap.text-right.text-sm.font-medium
                      .flex.items-center.justify-end.space-x-3
                        a.text-gray-400.hover_text-blue-600.transition-colors(href=`/departments/${dept.id}/stats` title="View Analytics")
                          svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24"): path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z")
                        
                        a.text-gray-400.hover_text-indigo-600.transition-colors(href=`/departments/${dept.id}/edit` title="Edit Settings")
                          svg.w-5.h-5(fill="none" stroke="currentColor" viewBox="0 0 24 24"): path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z")

    else
      //- Empty State
      .bg-white.rounded-lg.shadow-sm.border.border-gray-200.p-12.text-center
        .mx-auto.h-12.w-12.text-gray-400.mb-4
          svg(fill="none" stroke="currentColor" viewBox="0 0 24 24"): path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4")
        h3.text-lg.font-medium.text-gray-900 No departments found
        p.mt-1.text-sm.text-gray-500 Get started by creating your first support department.
        if isAdmin()
          .mt-6
            a.inline-flex.items-center.px-4.py-2.border.border-transparent.shadow-sm.text-sm.font-medium.rounded-md.text-white.bg-blue-600.hover_bg-blue-700(href="/departments/create")
              svg.w-4.h-4.mr-2(fill="none" stroke="currentColor" viewBox="0 0 24 24"): path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4")
              | Create Department