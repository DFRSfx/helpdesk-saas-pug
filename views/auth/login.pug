extends ../layout/layout

block content
  .min-h-screen.flex.items-center.justify-center.bg-gradient-to-br.from-indigo-50.via-purple-50.to-pink-50.py-12.px-4.sm_px-6.lg_px-8
    .max-w-md.w-full.space-y-8
      //- Header
      .text-center
        .mx-auto.w-16.h-16.bg-gradient-to-br.from-indigo-600.to-purple-600.rounded-2xl.flex.items-center.justify-center.shadow-lg
          i.lucide.lucide-headphones.text-white.w-8.h-8(data-lucide="headphones")
        h2.mt-6.text-4xl.font-extrabold.text-gray-900= appName
        p.mt-2.text-sm.text-gray-600 Sign in to your account
        
      //- Login Form
      .bg-white.rounded-2xl.shadow-xl.p-8
        form.space-y-6(action="/auth/login" method="POST")
          .space-y-4
            div
              label.block.text-sm.font-semibold.text-gray-700(for="email") Email Address
              .mt-1
                input#email.appearance-none.relative.block.w-full.px-4.py-3.border.border-gray-300.placeholder-gray-500.text-gray-900.rounded-lg.focus_outline-none.focus_ring-2.focus_ring-indigo-500.focus_border-transparent.transition-all(
                  type="email"
                  name="email"
                  required
                  placeholder="Enter your email"
                  autocomplete="email"
                )
            
            div
              label.block.text-sm.font-semibold.text-gray-700(for="password") Password
              .mt-1
                input#password.appearance-none.relative.block.w-full.px-4.py-3.border.border-gray-300.placeholder-gray-500.text-gray-900.rounded-lg.focus_outline-none.focus_ring-2.focus_ring-indigo-500.focus_border-transparent.transition-all(
                  type="password"
                  name="password"
                  required
                  placeholder="Enter your password"
                  autocomplete="current-password"
                )
          
          .flex.items-center.justify-between
            .flex.items-center
              input#remember.h-4.w-4.text-indigo-600.focus_ring-indigo-500.border-gray-300.rounded(
                type="checkbox"
                name="remember"
              )
              label.ml-2.block.text-sm.text-gray-700(for="remember") Remember me
            
            a.text-sm.font-medium.text-indigo-600.hover_text-indigo-500.transition-colors(href="/auth/forgot-password") Forgot password?
          
          button.group.relative.w-full.flex.justify-center.py-3.px-4.border.border-transparent.text-sm.font-semibold.rounded-lg.text-white.bg-gradient-to-r.from-indigo-600.to-purple-600.hover_from-indigo-700.hover_to-purple-700.focus_outline-none.focus_ring-2.focus_ring-offset-2.focus_ring-indigo-500.transition-all.shadow-lg.hover_shadow-xl(type="submit")
            span.flex.items-center
              | Sign in
              i.lucide.lucide-arrow-right.ml-2.w-4.h-4.group-hover_translate-x-1.transition-transform(data-lucide="arrow-right")
        
        .mt-6
          .relative
            .absolute.inset-0.flex.items-center
              .w-full.border-t.border-gray-300
            .relative.flex.justify-center.text-sm
              span.px-2.bg-white.text-gray-500 Don't have an account?
          
          .mt-6
            a.w-full.flex.justify-center.py-3.px-4.border-2.border-indigo-600.text-sm.font-semibold.rounded-lg.text-indigo-600.hover_bg-indigo-50.transition-all(href="/auth/register")
              | Create new account
      
      //- Demo Credentials
      .bg-blue-50.rounded-xl.p-4.border.border-blue-200
        p.text-xs.font-semibold.text-blue-900.mb-2 ðŸ”‘ Demo Credentials:
        .space-y-1.text-xs.text-blue-800
          p 
            strong Admin: 
            | admin@supportdesk.com / admin123
          p 
            strong Agent: 
            | agent1@supportdesk.com / agent123
          p 
            strong Customer: 
            | customer@example.com / customer123
