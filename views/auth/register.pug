extends ../layout/layout

block content
  .min-h-screen.flex.items-center.justify-center.bg-gray-50.py-12.px-4.sm_px-6.lg_px-8
    .max-w-md.w-full.space-y-8
      div
        h2.mt-6.text-center.text-3xl.font-extrabold.text-gray-900
          | Create your account
        p.mt-2.text-center.text-sm.text-gray-600
          | Already have an account?
          |
          a.font-medium.text-blue-600.hover_text-blue-500(href="/auth/login") Sign in

      form.mt-8.space-y-6(action="/auth/register" method="POST")
        .space-y-4
          div
            label.block.text-sm.font-medium.text-gray-700(for="name") Full Name
            input#name.mt-1.appearance-none.block.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.placeholder-gray-400.focus_outline-none.focus_ring-blue-500.focus_border-blue-500.sm_text-sm(
              name="name"
              type="text"
              required
              placeholder="John Doe"
            )

          div
            label.block.text-sm.font-medium.text-gray-700(for="email") Email address
            input#email.mt-1.appearance-none.block.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.placeholder-gray-400.focus_outline-none.focus_ring-blue-500.focus_border-blue-500.sm_text-sm(
              name="email"
              type="email"
              autocomplete="email"
              required
              placeholder="you@example.com"
            )

          div
            label.block.text-sm.font-medium.text-gray-700(for="password") Password
            input#password.mt-1.appearance-none.block.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.placeholder-gray-400.focus_outline-none.focus_ring-blue-500.focus_border-blue-500.sm_text-sm(
              name="password"
              type="password"
              autocomplete="new-password"
              required
              placeholder="••••••••"
            )

          div
            label.block.text-sm.font-medium.text-gray-700(for="confirmPassword") Confirm Password
            input#confirmPassword.mt-1.appearance-none.block.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.placeholder-gray-400.focus_outline-none.focus_ring-blue-500.focus_border-blue-500.sm_text-sm(
              name="confirmPassword"
              type="password"
              autocomplete="new-password"
              required
              placeholder="••••••••"
            )

        div
          button.w-full.flex.justify-center.py-2.px-4.border.border-transparent.rounded-md.shadow-sm.text-sm.font-medium.text-white.bg-blue-600.hover_bg-blue-700.focus_outline-none.focus_ring-2.focus_ring-offset-2.focus_ring-blue-500(type="submit")
            | Sign up
